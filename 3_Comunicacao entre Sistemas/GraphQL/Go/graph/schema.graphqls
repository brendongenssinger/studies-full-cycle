# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Category {
  id: ID!
  name: String!
  description: Boolean!
  courses: [Course!]!
}

type Course {
  id: ID!
  name: String!
  description: String!
  category: Category!
}

input NewCategory {
  name: String! 
  description: String!
}

input NewCourse {
  name: String!
  description: String!
  categoryID: ID!
}

type Query{
  categories: [Category!]!
  courses:[Course!]!
}

type Mutation {
  createCategory(input: NewCategory!): Category!
  createCourse(input: NewCourse!): Course!
}
